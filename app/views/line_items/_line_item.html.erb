<% if line_item == @current_item %>
  <tr class="line-item-highlight">
<% else %>
  <tr>
<% end %>
    <td class="text-right"> <%= line_item.quantity %> </td>
    <td>&times;</td>
    <td class="pr-2"><%= line_item.product.title %></td>
    <td class="text-right font-bold">
      <%= number_to_currency(line_item.total_price) %>
    </td>

    <!-- TODO Add functionality to decrement line item quantity. -->
    <td>
      <% if line_item.quantity > 1 %>
        <!-- Decrement quantity -->
        <%= button_to '-', line_item, method: :patch, 
              params: { line_item: { quantity: line_item.quantity - 1 } }, 
              class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600'%>
      <% else %>
        <!-- Remove line item completely -->
        <%= button_to 'X', line_item, method: :delete, 
              class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %> 
      <% end %>
    </td>
  </tr>
